<?xml version="1.0" encoding="utf-8"?>
<TableLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".TicTacToeActivity" android:gravity="center" android:id="@+id/tableLayout">

    <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:gravity="center">
        <TextView
                android:layout_width="100dp"
                android:textSize="50sp"
                android:layout_height="wrap_content" android:id="@+id/textView" android:gravity="center"
                android:layout_weight="64" android:text="00:05"/>
    </TableRow>
    <TableRow
            android:layout_width="match_parent"
            android:layout_height="60dp" android:gravity="center">
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/toe" android:id="@+id/imgButton1" android:onClick="imagrButtonTapped"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="70dp" app:srcCompat="@drawable/toe" android:id="@+id/imgButton3"
                android:layout_weight="1" android:onClick="imagrButtonTapped"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="70dp" app:srcCompat="@drawable/toe"
                android:id="@+id/imgButton2" android:layout_weight="1" android:onClick="imagrButtonTapped"/>
    </TableRow>
    <TableRow
            android:layout_width="match_parent"
            android:layout_height="60dp" android:gravity="center">
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="70dp" app:srcCompat="@drawable/toe"
                android:id="@+id/imgButton4" android:layout_weight="1" android:onClick="imagrButtonTapped"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="70dp" app:srcCompat="@drawable/toe"
                android:id="@+id/imgButton5" android:layout_weight="1" android:onClick="imagrButtonTapped"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="70dp" app:srcCompat="@drawable/toe" android:id="@+id/imgButton6"
                android:layout_weight="1" android:onClick="imagrButtonTapped"/>
    </TableRow>
    <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:gravity="center">
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="70dp" app:srcCompat="@drawable/toe"
                android:id="@+id/imgButton7" android:layout_weight="1" android:onClick="imagrButtonTapped"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="70dp" app:srcCompat="@drawable/toe"
                android:id="@+id/imgButton8" android:layout_weight="1" android:onClick="imagrButtonTapped"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="70dp" app:srcCompat="@drawable/toe" android:id="@+id/imgButton9"
                android:layout_weight="1" android:onClick="imagrButtonTapped"/>
    </TableRow>

</TableLayout>